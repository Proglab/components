<div id="{{ id }}" {{ attributes.defaults({ class: 'carousel slide' }) }} data-bs-ride="carousel">
    {% if with_indicators %}
    <div class="carousel-indicators">
        {% for image in this.images %}
            <button type="button" data-bs-target="#{{ id }}" data-bs-slide-to="{{ loop.index0 }}" {% if loop.first %}class="active" {% endif%}aria-current="true" aria-label="{{ image.alt|striptags }}"></button>
        {% endfor %}
    </div>
    {% endif %}
    <div class="carousel-inner">
        {% for image in this.images %}
        <div class="carousel-item{% if loop.first%} active{% endif %}"{% if image.interval is defined %} data-bs-interval="{{ image.interval }}"{% endif %}>
            <img src="{{ image.url }}" class="d-block w-100" alt="{{ image.alt }}">
            {% if image.caption is defined %}
                <div class="carousel-caption d-none d-md-block">
                    {% if image.caption.title is defined %}
                        <h5>{{ image.caption.title }}</h5>
                    {% endif %}
                    {% if image.caption.text is defined %}
                        <p>{{ image.caption.text }}</p>
                    {% endif %}
                </div>
            {% endif %}
        </div>
        {% endfor %}
    </div>
    {% if with_controls %}
        <button class="carousel-control-prev" type="button" data-bs-target="#{{ id }}" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">{{ control_previous }}</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#{{ id }}" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">{{ control_next }}</span>
        </button>
    {% endif %}
</div>